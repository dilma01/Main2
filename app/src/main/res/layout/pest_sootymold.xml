<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PestSootyMold">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진단서"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/goCalender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/goCalender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <!-- 이미지 블록 추가 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="790dp">

                <!-- 진단서 이미지 블록 -->
                <ImageView
                    android:layout_width="370dp"
                    android:layout_height="790dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/green_round" />

                <!-- 진단서 텍스트 -->
                <TextView
                    android:id="@+id/Jindan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="진단서"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <!-- 병명 이미지 블록 -->
                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="90dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/light_green_round"
                    android:scaleType="centerCrop" />

                <!-- 병명 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="55dp"
                    android:text="병명"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="2dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="83dp"
                    android:background="@drawable/black_back"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="95dp"
                    android:text="그을음병"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


                <!-- 증상 이미지 블록 -->
                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="170dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="155dp"
                    android:background="@drawable/light_green_round"
                    android:scaleType="centerCrop" />

                <!-- 증상 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="160dp"
                    android:text="증상"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="2dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="193dp"
                    android:background="@drawable/black_back"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="205dp"
                    android:text="주로 잎에서 발병. 흑색 곰팡이군이 잎 표면을 덮음. 식물체에 직접적으로 피해를 주지는 않지만, 광합성을 방해해 성장을 방해함."
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <!-- 원인 이미지 블록 -->
                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="340dp"
                    android:background="@drawable/light_green_round"
                    android:scaleType="centerCrop" />

                <!-- 원인 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="345dp"
                    android:text="원인"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="2dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="378dp"
                    android:background="@drawable/black_back"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="390dp"
                    android:text="당분을 많이 함유한 액체를 분비하는 해충의 배설물이 묻어 있는 부위에 그을음 모양의 균 또는 곰팡이가 형성."
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <!-- 처방전 이미지 블록 -->
                <ImageView
                    android:layout_width="345dp"
                    android:layout_height="250dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="515dp"
                    android:background="@drawable/light_green_round"
                    android:scaleType="centerCrop" />

                <!-- 처방전 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="520dp"
                    android:text="처방전"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="2dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="553dp"
                    android:background="@drawable/black_back"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="561dp"
                    android:text="잎에 묻은 분비물을 물로 닦아내 주세요. \n식물을 햇빛이 잘 드는 곳에 두고 통풍이 잘 되게 해주세요. \n당분을 많이 함유한 액체를 분비하는 해충(각종 진딧물) 방제를 철저히 해주세요."
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/goCalender"
        android:layout_width="370dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/green_round"
        android:text="식물기록 하러가기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>