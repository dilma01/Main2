<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".PestLateblight">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진단서"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />
</androidx.appcompat.widget.Toolbar>

<ScrollView
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@+id/goCalender"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    app:layout_constraintVertical_bias="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/goCalender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <!-- 이미지 블록 추가 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="650dp">

            <!-- 진단서 이미지 블록 -->
            <ImageView
                android:layout_width="370dp"
                android:layout_height="650dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/green_round" />

            <!-- 진단서 텍스트 -->
            <TextView
                android:id="@+id/Jindan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="진단서"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

            <!-- 병명 이미지 블록 -->
            <ImageView
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/light_green_round"
                android:scaleType="centerCrop" />

            <!-- 병명 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="55dp"
                android:text="병명"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="340dp"
                android:layout_height="2dp"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:layout_marginTop="83dp"
                android:background="@drawable/black_back"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="95dp"
                android:text="역병"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <!-- 증상 이미지 블록 -->
            <ImageView
                android:layout_width="340dp"
                android:layout_height="120dp"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:layout_marginTop="155dp"
                android:background="@drawable/light_green_round"
                android:scaleType="centerCrop" />

            <!-- 증상 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="160dp"
                android:text="증상"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="340dp"
                android:layout_height="2dp"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:layout_marginTop="193dp"
                android:background="@drawable/black_back"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="205dp"
                android:text="뿌리부터 열매까지 전체적으로 발생,
갈색으로 썩고 오그라들면서 괴사함."
                android:textColor="@color/black"
                android:textSize="20dp" />

            <!-- 원인 이미지 블록 -->
            <ImageView
                android:layout_width="340dp"
                android:layout_height="120dp"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:layout_marginTop="290dp"
                android:background="@drawable/light_green_round"
                android:scaleType="centerCrop" />

            <!-- 원인 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="295dp"
                android:text="원인"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="340dp"
                android:layout_height="2dp"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:layout_marginTop="328dp"
                android:background="@drawable/black_back"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="340dp"
                android:text="토양의 장기간 과한 습도와 배수의 불량으로 인해 진균이 발생함."
                android:textColor="@color/black"
                android:textSize="20dp" />

            <!-- 처방전 이미지 블록 -->
            <ImageView
                android:layout_width="340dp"
                android:layout_height="205dp"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:layout_marginTop="425dp"
                android:background="@drawable/light_green_round"
                android:scaleType="centerCrop" />

            <!-- 처방전 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="430dp"
                android:text="처방전"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="340dp"
                android:layout_height="2dp"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:layout_marginTop="463dp"
                android:background="@drawable/black_back"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="471dp"
                android:text="토양이 장기간 과하게 습하지 않도록 물 빠짐에 신경 써주세요. \n베지크린 입상수화제를 발병 초 7일 간격 물 1L당 0. 4g 희석해서 수확 3일 전까지 3회 이내로 사용해 주세요."
                android:textColor="@color/black"
                android:textSize="20dp" />

        </FrameLayout>
    </LinearLayout>
</ScrollView>

<Button
    android:id="@+id/goCalender"
    android:layout_width="370dp"
    android:layout_height="49dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/green_round"
    android:text="식물기록 하러가기"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>